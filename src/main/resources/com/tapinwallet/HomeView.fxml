<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="663.0" prefWidth="405.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tapinwallet.controllers.HomeViewController">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 12; -fx-background-color: #f4f4f4;" styleClass="page-header" stylesheets="@tapin.css">
         <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@img/home.png" />
            </image>
         </ImageView>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Home" />
        </HBox>
    </top>

    <!-- Dashboard -->
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="3161.0" prefWidth="405.0" spacing="20" style="-fx-padding: 20;">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" />
         </children>

        </VBox>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.web.WebView?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tapinwallet.controllers.AppModViewController">
    <BorderPane prefHeight="688.0" prefWidth="335.0" style="-fx-background-color: white;" stylesheets="@tapin.css">
        <center>
            <WebView fx:id="webView" prefHeight="560.0" prefWidth="275.0" BorderPane.alignment="CENTER" />
        </center>
        <top>
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 12; -fx-background-color: #f4f4f4;" styleClass="page-header" BorderPane.alignment="CENTER">
                <children>
                    <ImageView fx:id="headerIcon" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@img/problem.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="headerTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="App Mod" />
                    <Region HBox.hgrow="ALWAYS" />
                    <ImageView fx:id="burgerButton" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@img/burgerbutton.png" />
                        </image>
                    </ImageView>
                </children>
            </HBox>
        </top>
    </BorderPane>
    <!--<fx:include fx:id="popupRoot" source="ActionPopup.fxml"/>-->
</StackPane>

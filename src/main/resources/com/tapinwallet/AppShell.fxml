<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="rootPane" prefHeight="776.0" prefWidth="393.0" stylesheets="@tapin.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tapinwallet.controllers.AppShellController">

    <!-- Header -->
    <top>
        <HBox prefHeight="0.0" prefWidth="133.0" spacing="10" styleClass="app-header">
         <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../META-INF/img/wallet.png" />
            </image>
         </ImageView>
            <!-- Logo/Icon + Tapin Text -->
            <Label styleClass="app-logo" text="Tapin" />
        </HBox>
    </top>

    <!-- Body -->
    <center>
        <StackPane fx:id="bodyContainer" prefHeight="3995.0" prefWidth="133.0" styleClass="app-body" />
    </center>
</BorderPane>
